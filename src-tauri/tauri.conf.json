{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "super_copy",
	"version": "0.5.0",
	"identifier": "com.dev-yoou.supercopy",
	"build": {
		"frontendDist": "../src"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "super_copy",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"plugins": {
		"singleInstance": {
			"enable": true
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}